@using ETicaretMvc.Models.Sınıflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
@using(Html.BeginForm("Index","Urun", FormMethod.Post))
            {
                <p>
                    Ürün adı : @Html.TextBox("p")
                    <input type="submit" value="Ara" />
                </p>
            }
<br/>
<table class="table table-bordered">
    <tr>
       
        <th>ÜRÜN</th>
        <th>MARKA </th>
        <th>STOK </th>
        <th>ALIŞ FİYAT </th>
        <th>SATIŞ FİYAT </th>
        <th>KATEGORİ </th>
        
        <th>SİL </th>
        <th>GÜNCELLE </th>
        
    </tr>
    @foreach (var u in Model)
    {
<tr>

    <td>@u.UrunAd</td>
    <td>@u.Marka</td>
    <td>@u.Stok</td>
    <td>@u.AlisFiyati</td>
    <td>@u.SatisFiyati</td>
    <td>@u.Kategori.KategoriAd</td>

    <td>
        <a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">Güncelle</a>
    </td>
   
</tr>
    }

</table>
<a href="/Urun/Yeniurun/" class="btn btn-primary">Yeni Ürün</a>

