@model ETicaretMvc.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>Müşteri Bilgileri</h2>
<br />
@using (Html.BeginForm("Index2", "CariPanel", FormMethod.Post))
{
<table class="table table-hover">
    <tr>
        <td>
            <label>Ad Soyad: @HttpContext.Current.User.Identity.Name</label>
        </td>
    </tr>
    <tr><td>@Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</td></tr>
    <tr><td>@Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })</td></tr>
    <tr><td>@Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })</td></tr>
    <tr><td>@Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td></tr>

</table>
<button class="btn btn-warning"> Bilgilerimi Güncelle</button>
            }

