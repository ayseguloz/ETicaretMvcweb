@using ETicaretMvc.Models.Sınıflar;
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        
        <th>Seri No</th>
        <th>Sıra No</th>
       
        <th>Tarih</th>
        <th>Saat</th>

        
        <th>Toplam</th>
        <th>Güncelleme</th>
        <th>Teslim Detaylar</th>

        <th>Yeni Kalem</th>
    </tr>
   @foreach (var k in Model)

    { 
<tr>

    <td>@k.FaturaSeriNo</td>
    <td>@k.FaturaSiraNo</td>
  
    <td>@k.Tarih</td>
    <td>@k.Saat</td>
    
 
    <td>@k.Toplam</td>

    <td><a href="/Fatura/FaturaGetir/@k.FaturaId" class=" btn btn-warning">Güncelle</a></td>
    <td><a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-default" style="background-color:lightcoral; color:white">Detaylar</a></td>

    <td><a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-default" style="background-color:aquamarine; color:white"> Kalem</a></td>
</tr>
    }
</table>
<a href="/Fatura/FaturaEkle" class=" btn btn-info">Yeni Fatura Girişi</a>
<br /> <br />
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Güncel fatura görüntüle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Fatura ekranı</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <td>Seri no</td>
                        <td>Sıra no</td>
                        <td>Tutar</td>
                    </tr>
                    @foreach (var x in Model)
                    {


                    <tr>
                        <td>@x.FaturaSeriNo</td>
                        <td>@x.FaturaSiraNo</td>
                        <td>@x.Toplam</td>
                    </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>


